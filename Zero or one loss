from typing import List

class Solution:
    def findWinners(self, matches: List[List[int]]) -> List[List[int]]:
        loss_count = {}
        players = set()
        
        # Count losses and track all players
        for winner, loser in matches:
            players.add(winner)
            players.add(loser)
            
            if loser in loss_count:
                loss_count[loser] += 1
            else:
                loss_count[loser] = 1
        
        no_loss = []
        one_loss = []
        
        # Check each player
        for player in players:
            losses = loss_count.get(player, 0)
            
            if losses == 0:
                no_loss.append(player)
            elif losses == 1:
                one_loss.append(player)
        
        return [sorted(no_loss), sorted(one_loss)]
